<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.lenovo.inequalitysign.ui.DiningInformationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/zzka">
        <Button
            android:id="@+id/back3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/zz"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="90dp"
            android:text="商家名称"
            android:id="@+id/name"
            android:textSize="24dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_logo"
            android:src="@drawable/zzkfd"/>

    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="vertical"
       android:layout_weight="3">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_marginTop="8dp"
           android:orientation="horizontal">
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="5"
               android:text="服务类型"
               android:textSize="22dp"
               android:layout_gravity="center"
               android:textAlignment="center"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="5"
               android:text="人数"
               android:textAlignment="center"
               android:textSize="22dp"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"/>


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/ll1"
           android:orientation="horizontal"
           android:visibility="visible">
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="5"
               android:id="@+id/Dtv1"
               android:textSize="20dp"
               android:gravity="center"
               android:textStyle="bold"
               android:text="买卡"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="5"
               android:textSize="20dp"
               android:id="@+id/Dtv11"
               android:gravity="center"
               android:textStyle="bold"
               android:text=" 7"/>
           <ImageButton
               android:layout_width="0dp"
               android:layout_height="30dp"
               android:layout_weight="1"
               android:id="@+id/ib1"
               android:layout_marginRight="10dp"
                android:layout_gravity="center"
               android:src="@drawable/daixuan"
               android:background="@drawable/select"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/ll2"
           android:orientation="horizontal"
           android:visibility="visible">
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="5"
               android:id="@+id/Dtv2"
               android:textSize="20dp"
               android:textStyle="bold"
               android:gravity="center"
               android:text="充话费"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="5"
               android:textSize="20dp"
               android:id="@+id/Dtv21"
               android:gravity="center"
               android:textStyle="bold"
               android:text="6"/>
           <ImageButton
               android:layout_width="0dp"
               android:layout_height="30dp"
               android:layout_weight="1"
               android:id="@+id/ib2"
               android:layout_marginRight="10dp"
               android:layout_gravity="center"
               android:src="@drawable/daixuan"
               android:background="@drawable/select"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/ll3"
           android:orientation="horizontal"
           android:visibility="visible">
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="5"
               android:textSize="20dp"
               android:gravity="center"
               android:textStyle="bold"
               android:id="@+id/Dtv3"
               android:text="办宽带"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="5"
               android:textSize="20dp"
               android:gravity="center"
               android:id="@+id/Dtv31"
               android:textStyle="bold"
               android:text="6"/>
           <ImageButton
               android:layout_width="0dp"
               android:layout_height="30dp"
               android:layout_weight="1"
               android:layout_marginRight="10dp"
               android:layout_gravity="center"
               android:src="@drawable/daixuan"
               android:id="@+id/ib3"
               android:background="@drawable/select"/>
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <Button
            android:id="@+id/btn_qh"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="100dp"
            android:textSize="20dp"
            android:background="@drawable/zzkshape"
            android:text="立即取号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:id="@+id/address"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"
            android:text="河北师范大学南二环东路辅路"/>
    </LinearLayout>
</LinearLayout>
